STOP LISTENER('SYSTEM.LISTENER.TCP.1')

* Developer queues
DEFINE QLOCAL('OMS.FLOW_COMPARATOR_1') REPLACE
DEFINE QLOCAL('OMS.FLOW_COMPARATOR_1.ERR') REPLACE
DEFINE QLOCAL('OMS.FLOW_COMPARATOR_2') REPLACE
DEFINE QLOCAL('OMS.FLOW_COMPARATOR_2.ERR') REPLACE

* threshold
ALTER QL('OMS.FLOW_COMPARATOR_1') BOQNAME('OMS.FLOW_COMPARATOR_1.ERR') BOTHRESH(1)
ALTER QL('OMS.FLOW_COMPARATOR_2') BOQNAME('OMS.FLOW_COMPARATOR_2.ERR') BOTHRESH(1)

* Developer connection authentication
DEFINE AUTHINFO('DEV.AUTHINFO') AUTHTYPE(IDPWOS) CHCKCLNT(REQDADM) CHCKLOCL(OPTIONAL) ADOPTCTX(YES) REPLACE
ALTER QMGR CONNAUTH('DEV.AUTHINFO')
REFRESH SECURITY(*) TYPE(CONNAUTH)

* Developer channels (Application + Admin)
* Developer channels (Application + Admin)
DEFINE CHANNEL('DEV.ADMIN.SVRCONN') CHLTYPE(SVRCONN) REPLACE
DEFINE CHANNEL('MQCHL.CLT') CHLTYPE(SVRCONN) MCAUSER('app') REPLACE

* Developer channel authentication rules
SET CHLAUTH('*') TYPE(ADDRESSMAP) ADDRESS('*') USERSRC(NOACCESS) DESCR('Back-stop rule - Blocks everyone') ACTION(REPLACE)
SET CHLAUTH('MQCHL.CLT') TYPE(ADDRESSMAP) ADDRESS('*') USERSRC(CHANNEL) CHCKCLNT(ASQMGR) DESCR('Allows connection via APP channel') ACTION(REPLACE)
SET CHLAUTH('DEV.ADMIN.SVRCONN') TYPE(BLOCKUSER) USERLIST('nobody') DESCR('Allows admins on ADMIN channel') ACTION(REPLACE)
SET CHLAUTH('DEV.ADMIN.SVRCONN') TYPE(USERMAP) CLNTUSER('admin') USERSRC(CHANNEL) DESCR('Allows admin user to connect via ADMIN channel') ACTION(REPLACE)

* Developer authority records
SET AUTHREC GROUP('mqclient') PRINCIPAL('app')  OBJTYPE(QMGR) AUTHADD(CONNECT,INQ)
SET AUTHREC PROFILE('OMS.**') GROUP('mqclient') OBJTYPE(QUEUE) PRINCIPAL('app') AUTHADD(BROWSE,GET,INQ,PUT)
SET AUTHREC PROFILE('OMS.**') GROUP('mqclient') OBJTYPE(TOPIC) PRINCIPAL('app') AUTHADD(BROWSE,GET,INQ,PUT)
SET AUTHREC PROFILE('OMS.FLOW_COMPARATOR_1.ERR')   OBJTYPE(QUEUE) PRINCIPAL('app') AUTHADD(BROWSE,GET,INQ,PUT,PASSALL)
SET AUTHREC PROFILE('OMS.FLOW_COMPARATOR_2.ERR')   OBJTYPE(QUEUE) PRINCIPAL('app') AUTHADD(BROWSE,GET,INQ,PUT,PASSALL)

* Developer listener
DEFINE LISTENER('DEV.LISTENER.TCP') TRPTYPE(TCP) PORT(1414) CONTROL(QMGR) REPLACE
START LISTENER('DEV.LISTENER.TCP')